<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] 後臺管理</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/ShoppingBackstage.styles.css" asp-append-version="true" /> *@

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">

</head>
<body>
    <!-- sidebar -->
    <div class="sidebar sidebar-fixed" id="sidebar" style="background-color:#3c4b64">
        <div class="d-none d-md-flex">
            <a class="header-toggler d-none d-md-block" href="/" title="返回首頁">
                <img src="/images/logo.png" class="img-fluid" alt="">
            </a>
            <a class="header-brand d-md-none" href="/" title="返回首頁">
                <img src="/images/logo.png" alt="">
            </a>
        </div>

        <div class="simplebar-wrapper" style="margin: 0px;">
            <div class="simplebar-height-auto-observer-wrapper">
                <div class="simplebar-height-auto-observer"></div>
            </div>
            <div class="simplebar-mask">
                <div class="simplebar-offset" style="right: 0px; bottom: 0px;">
                    <div class="simplebar-content-wrapper" tabindex="0" role="region" aria-label="scrollable content" style="height: auto; overflow: hidden;">
                        <div class="simplebar-content" style="padding: 0px;">

                            <ul class="sidebar-nav" data-coreui="navigation" data-simplebar="init">
                                <li class="nav-group" style="background-color:#3c4b64">
                                    <a href="/SchoolSafetyManagement" class="nav-link nav-group-toggle">
                                        最新消息管理
                                    </a>
                                    <ul class="nav-group-items" style="background-color:#3c4b64">
                                        <li class="nav-item">
                                            <a href="/SchoolSafety/TypeSetting" class="nav-link nav-group">
                                                管理消息
                                            </a>
                                        </li>

                                        <li class="nav-group" style="background-color:#3c4b64">
                                            <a href="/SchoolSafetyManagemen" class="nav-link nav-group-toggle">
                                                問卷管理
                                            </a>
                                            <ul class="nav-group-items" style="background-color:#3c4b64">
                                                <li class="nav-item" style="padding-left: 40px;">
                                                    <!-- 减少padding-left的值更靠左 -->
                                                    <a href="/SchoolSafety/SurveyManagement" class="nav-link nav-group">
                                                        新增問卷
                                                    </a>
                                                </li>
                                            </ul>
                                        </li>

                                    </ul>
                                </li>

                                <li class="nav-group" style="background-color:#3c4b64">
                                    <a href="/VehiclePermitManagement" class="nav-link nav-group-toggle">
                                        商品管理
                                    </a>
                                    <ul class="nav-group-items" style="background-color:#3c4b64">
                                        <li class="nav-item">
                                            <a href="/VehiclePermit/VehicleSetting" class="nav-link nav-group">
                                                商品分類
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="/VehiclePermit/ApplicationEvent" class="nav-link nav-group">
                                                商品細項
                                            </a>
                                        </li>

                                    </ul>
                                </li>

                                <li class="nav-group" style="background-color:#3c4b64">
                                    <a href="/VehiclePermitManagement" class="nav-link nav-group-toggle">
                                        訂單管理
                                    </a>
                                    <ul class="nav-group-items" style="background-color:#3c4b64">
                                        <li class="nav-item">
                                            <a href="/VehiclePermit/VehicleSetting" class="nav-link nav-group">
                                                訂單審核
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="/VehiclePermit/ApplicationEvent" class="nav-link nav-group">
                                                出貨細項
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="/VehiclePermit/ApplicationEvent" class="nav-link nav-group">
                                                退貨細項
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="/VehiclePermit/ApplicationEvent" class="nav-link nav-group">
                                                範本管理
                                            </a>
                                        </li>
                                    </ul>
                                </li>

                                <li class="nav-group" style="background-color:#3c4b64">
                                    <a href="/VehiclePermitManagement" class="nav-link nav-group-toggle">
                                        金流管理
                                    </a>
                                    <ul class="nav-group-items" style="background-color:#3c4b64">
                                        <li class="nav-item">
                                            <a href="/VehiclePermit/VehicleSetting" class="nav-link nav-group">
                                                金流事件
                                            </a>
                                        </li>
                                        
                                    </ul>
                                </li>

                                <li class="nav-group" style="background-color:#3c4b64">
                                    <a href="/VehiclePermitManagement" class="nav-link nav-group-toggle">
                                        系統事件
                                    </a>
                                    <ul class="nav-group-items" style="background-color:#3c4b64">
                                        <li class="nav-item">
                                            <a href="/LogEvent/Log" class="nav-link nav-group">
                                                LOG管理
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="simplebar-placeholder" style="width: auto; height: 255px;"></div>
        </div>
        <div class="simplebar-track simplebar-horizontal" style="visibility: hidden;">
            <div class="simplebar-scrollbar" style="width: 0px; display: none;"></div>
        </div>
        <div class="simplebar-track simplebar-vertical" style="visibility: hidden;">
            <div class="simplebar-scrollbar" style="height: 0px; display: none;"></div>
        </div>
    </div>

    <div class="wrapper d-flex flex-column min-vh-100 bg-light">

        <header class="header header-sticky mb-4">
            <div class="container-fluid">
                <button class="header-toggler px-md-0 me-md-3" type="button" onclick="coreui.Sidebar.getInstance(document.querySelector('#sidebar')).toggle()">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-lg" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"></path>
                    </svg>
                </button>
                <ul class="header-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="javascript:;" title="">
                            <span></span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Login/Logout" title="登出">
                            登出<i class="bi bi-door-closed"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </header>
        <div class="container-fluid p-5">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- CoreUI and necessary plugins-->
    <script src="~/vendors/coreui/coreui.bundle.min.js"></script>
    <script src="~/vendors/simplebar/simplebar.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>

    <!-- 分頁用 -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
